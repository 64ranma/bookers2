<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-4">
      <h2>User info</h2>
      <div>
        <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
          <tbody>
            <tr></tr>
              <tr>
	              <th>name</th>
	              <th></th>
              </tr>
              <tr>
	              <th>introduction</th>
	              <th></th>
              </tr><br></br>
              
            <td><br>
            <% if @user == current_user %>
            <div class='nav-item'>
              <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
                <i class="fa-solid fa-user-gear"></i>
              <% end %>
            </div>
            <% end %>
            </td>
      </div>
          </tbody>
          </table>
          
      <h2 >New book</h2>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %><br>
          <%= f.submit 'Create Book' %>
        <% end %>
    </div>
  
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
          <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
       <tbody>
       </tbody>
      </table>
    </div>   
  </div>
</div>