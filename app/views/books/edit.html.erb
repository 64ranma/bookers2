<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <div id="notice">
        <% if @book.errors.any? %>
          <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
        <%= form_with model: @book do |f| %>
          <label for="inputName">Title</label>
          <br>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:""%>
          <br><br>
          <label for="inputBody">Opinion</label>
          <br>
          <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:""%>
          <br><br>
          <%= f.submit "Update Book", class: "btn btn-success"%>
        <% end %>
        <%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>